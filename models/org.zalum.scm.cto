namespace org.zalum.scm

asset Article identified by articleId {
  o String articleId  
  o Integer price
  o Integer quantity
  --> BusinessPartner owner
}

transaction TradePurchaseOrder {
  --> Article article
  --> BusinessPartner newOwner
}

participant BusinessPartner identified by businessPartnerId{
  o String businessPartnerId
  o PartnerType type 
}

concept PartnerType {
	o String type
}
